{
  "site": {
    "name": "Chicago's Money",
    "url": "chicagosmoney.com",
    "local_path": ".",
    "remote_path": "~/domains/chicagosmoney.com/public_html"
  },
  "ftp": {
    "host": "ftp.chicagosmoney.com",
    "port": 21,
    "username_hint": "u419904569.chicagosmoney.com",
    "root_directory": "public_html",
    "notes": "Set password in hPanel. lftp mirror -R --delete ./ public_html/"
  },
  "hostinger": {
    "plan": "Cloud Startup",
    "features": [
      "Dedicated Cloud Resources",
      "Automatic Scaling & Caching",
      "Up to 300 Websites",
      "Daily Backups & Staging",
      "SSH/SFTP Access (Port 22)"
    ],
    "ssh_port": 65002,
    "sftp_port": 65002,
    "deployment_methods": [
      "hPanel File Manager",
      "SSH/SFTP",
      "rsync",
      "DeployHQ Integration",
      "DeployBot Integration"
    ]
  },
  "deployment": {
    "method": "rsync",
    "ssh_port": 65002,
    "sftp_port": 65002,
    "backup_before_deploy": true,
    "excludes": [
      ".git",
      ".github",
      ".gitignore",
      ".vscode",
      ".DS_Store",
      ".claude",
      "deploy.sh",
      "deploy-config.json",
      "deploy-quick.sh",
      "test-deployment.sh",
      "DEPLOYMENT_GUIDE.md",
      "docs",
      "*.md",
      "node_modules",
      ".env",
      "backups",
      "*.log",
      "*.tmp"
    ],
    "includes": [
      "*.html",
      "*.css",
      "*.js",
      "*.php",
      "*.json",
      "*.xml",
      "*.txt",
      "*.png",
      "*.jpg",
      "*.jpeg",
      "*.webp",
      "*.svg",
      "*.ico",
      "IMG/",
      "icons/",
      "api/",
      "css/",
      "templates/",
      "config/"
    ]
  },
  "pre_deploy": {
    "update_version": true,
    "update_service_worker": true,
    "check_files": true,
    "create_backup": true,
    "validate_seo": true
  },
  "post_deploy": {
    "clear_cache": true,
    "test_urls": [
      "https://chicagosmoney.com/",
      "https://chicagosmoney.com/deploy-info.php"
    ],
    "notify_success": true,
    "update_sitemap": false
  },
  "cloud_features": {
    "auto_scaling": true,
    "dedicated_resources": true,
    "priority_support": true,
    "global_cdn": true
  }
}
